@using CDGBulgaria.Web.ViewModels.CDGDisease
@model CDGBulgaria.Web.ViewModels.CDGDisease.CDGDiseaseDeleteModel

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info text-center">Delete DiseaseInfo</h2>
<hr class="hr-2 bg-primary w-50">
<form class="mx-auto width w-50" asp-action="Delete">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" class="form-control" value="@Model.Name" disabled />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label"></label>
		<textarea asp-for="Description" class="form-control" value="@Model.Description" disabled></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group mx-auto">
		<div class="d-flex justify-content-center">
			<label asp-for="CDGDiseaseType" class="text-primary h5">CDGDisease Type</label>
		</div>
		<select class="form-control text-primary" id="type" disabled>
			<option selected disabled>--- Select CDGDisease Type ---</option>
			@foreach (var type in (IEnumerable<CDGDiseaseCreateCDGDiseaseTypeViewModel>)this.ViewData["types"])
			{
				@if (type.Name == Model.CDGDiseaseType.Name)
				{
					<option value="@type.Name" selected>@type.Name</option>
				}
				else
				{
					<option value="@type.Name">@type.Name</option>
				}

			}
		</select>
		<span asp-validation-for="CDGDiseaseType" class="text-danger"></span>
	</div>
	<hr class="hr-2 bg-primary mt-4">
	<div class="d-flex justify-content-center mt-3">
		<button type="submit" value="Delete" class="btn  btn-danger font-weight-bold">Delete CDGDiseaseInfo</button>
	</div>
</form>
